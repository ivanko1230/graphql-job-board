# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/jobboard?schema=public"

# Server Configuration
PORT=4000

# Firebase Admin Configuration
# Option 1: Service Account Key (Recommended for production)
# Download service account key from Firebase Console:
# https://console.firebase.google.com/project/YOUR_PROJECT/settings/serviceaccounts/adminsdk
# Copy the entire JSON object and paste it as a single-line string here
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Option 2: Project ID (For development/testing only)
# If you don't have a service account key, you can use just the project ID
# Note: This method has limited functionality and may not work for all features
# FIREBASE_PROJECT_ID=your-project-id

# JWT Secret (if needed for additional authentication)
# JWT_SECRET=your-secret-key-change-in-production
